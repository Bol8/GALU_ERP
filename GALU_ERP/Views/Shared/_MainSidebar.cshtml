@using Microsoft.AspNet.Identity
@using GALU_ERP.Security

@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    var identity = HttpContext.Current.User.ToCustomPrincipal().CustomIdentity;



 <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        @*Sidebar user panel*@
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/dist/img/@identity.imagen.Trim()" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p>@identity.FirstName,@identity.LastName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
