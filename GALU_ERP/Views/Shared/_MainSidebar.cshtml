                <a href="#">
                    <i class="fa fa-rub"></i> <span>Pedidos</span> <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li class="active"><a href="@Url.Action("Index", "pedido_c")"><i class="fa fa-circle-o"></i>Clientes</a></li>
                    <li><a href="@Url.Action("Index", "pedido_p")"><i class="fa fa-circle-o"></i>Proveedores</a></li>
