<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Tabla Clientes</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-6">
                                @*<a href="#" class="btn btn-primary" role="button">Nuevo</a>*@
                                @Html.ActionLink("Nuevo", "Create", "", new { @class = "btn btn-sm btn-primary" })
                                @*<div class="dataTables_length" id="example1_length">
                                        <label>
                                            Muestra
                                            <select name="example1_length" aria-controls="example1" class="form-control input-sm">
                                                <option value="10">10</option>
