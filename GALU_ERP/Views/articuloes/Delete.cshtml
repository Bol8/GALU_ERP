@model GALU_ERP.Entidades.articulo


<section class="content-header">
    <h1>
        Eliminar
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard">&nbsp;</i>@Html.ActionLink("Dashboard", "Index", "Home", null, null)</li>
        <li>@Html.ActionLink("Productos", "Index", "articuloes", null, null)</li>
        <li><a href="#">Eliminar</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Estás seguro de que quieres eliminar?</h3>
                </div>
                <div class="box-body">

                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Nombre):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Peso):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Peso) gr.
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Tipo):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Tipo)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Precio):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Precio) €
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.IVA):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.IVA) %
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Descripcion):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Origen):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Origen)
                            </dd>

                            <dt>
                                Estado:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.estado1.Nombre)
                            </dd>

                        </dl>
                    </div>

                    <br />

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="FooterDetails">
                            <p>
                                <input type="submit" value="Eliminar" class="btn btn-sm btn-danger"/> |
                                @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-sm bg-navy" })
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>


