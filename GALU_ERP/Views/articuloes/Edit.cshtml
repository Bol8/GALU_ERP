@model GALU_ERP.Entidades.articulo


<section class="content-header">
    <h1>
        Editar
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard">&nbsp;</i>@Html.ActionLink("Dashboard", "Index", "Home", null, null)</li>
        <li>@Html.ActionLink("Productos", "Index", "articuloes", null, null)</li>
        <li><a href="#">Editar</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Detalle Producto</h3>
                </div>
                
                <div class="box-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()


                        <div class="panel-body">
                            <div class="form-horizontal">

                                @Html.ValidationSummary(true)

                                <div class="col-md-3">

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.idArt, htmlAttributes: new { @class = "control-label"}):
                                            @Html.ValidationMessageFor(model => model.idArt, null, new { @class = "required" })
                                            <span class="required">@ViewBag.FailId</span>
                                            <br />
                                            @Html.TextBoxFor(model => model.idArt, new { @class = "form-control", disabled="true" })
                                          
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" }):
                                            @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "required" })
                                            <br />
                                            @*@Html.EditorFor(model => model.Nombre)*@
                                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Estado, "Estado", htmlAttributes: new { @class = "control-label" }):
                                            @Html.ValidationMessageFor(model => model.Estado, null, new { @class = "required" })
                                            <br />
                                            @Html.DropDownListFor(model => model.Estado, null, "", new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "control-label" }):
                                            @Html.ValidationMessageFor(model => model.Peso, null, new { @class = "required" })
                                            <br />
                                            @*  @Html.EditorFor(model => model.Peso)*@
                                            @Html.TextBoxFor(model => model.Peso, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label" }):
                                            @Html.ValidationMessageFor(model => model.Tipo, null, new { @class = "required" })
                                            <br />
                                            @Html.TextBoxFor(model => model.Tipo, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Origen, htmlAttributes: new { @class = "control-label" }):
                                            @Html.ValidationMessageFor(model => model.Origen, null, new { @class = "required" })
                                            <br />
                                            @Html.TextBoxFor(model => model.Origen, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label" }):
                                            @Html.ValidationMessageFor(model => model.Precio, null, new { @class = "required" })
                                            <br />
                                            @Html.TextBoxFor(model => model.Precio, new { @class = "form-control" })
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.IVA, htmlAttributes: new { @class = "control-label" }):
                                            @Html.ValidationMessageFor(model => model.IVA, null, new { @class = "required" })
                                            <br />
                                            @Html.TextBoxFor(model => model.IVA, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" }):
                                            @Html.ValidationMessageFor(model => model.Descripcion)
                                            <br />
                                            @Html.TextAreaFor(model => model.Descripcion, 9, 0, new { @class = "form-control", style = "width: 100%;" })
                                         
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="Button btn-group" style="float:right">
                                            <input id="btnSubmit" type="submit" value="Guardar" class="btn btn-sm bg-olive" />
                                            @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-sm bg-navy" })
                                        </div>

                                    </div>
                                </div>
                               
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>





